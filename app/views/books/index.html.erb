<h1>Books</h1>
<thead>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
    </tr>
</thead>
<tbody>
    <% @books.each do |book| %>
     <tr>
        <td><%= book.title %></td>
        <td>
         <link_to "Show", book %>
         <link_to "Edit", edit_book_path(book) %>
         <link_to "Delete", book,  method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
     </tr>
    <% end %>
</tbody>

<h4>NewBooks</h4>
<%= form_with model: Book.new, local: true do |f| %>
　<div class="field">
　  <%= f.label :title %>
    <%= f.text_field :title %>
　</div>
  <div class="field">
    <%= f.label :body%>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Books' %>
  </div>
<% end %>