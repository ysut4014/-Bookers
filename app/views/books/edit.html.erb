

<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div id="error_explanation">

  <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  
 </div>

 <% end %>
 <%= form_with(model: @book, local: true) do |f| %>

 <div class="field">
 <div class="<%= 'alert' if @book.errors.any?%>">
  <%= f.label :title %>
 </div>
 <div class="<%= 'alert' if @book.errors.any?%>">
  <%= f.text_field :title %>
 </div>
 </div>

 <div class="field">
 <div class="<%= 'alert' if @book.errors.any?%>">
  <%= f.label :body %>
 </div>
 <div class="<%= 'alert' if @book.errors.any?%>">
  <%= f.text_area :body %>
 </div>
 </div>
 
 <div class="actions">
    <%= f.submit 'Update Book' %>
 </div>
<% end %>


